{
    "order": 0,
    "template": ".dataman-alerts",
    "settings": {
        "index": {
            "number_of_shards": 5,
	    "number_of_replicas": 0
        }
    },
    "mappings": {
        "_default_": {
            "dynamic_templates": [
                {
                    "string_template": {
                        "match": "*",
                        "mapping": {
                            "type": "string",
                            "index": "not_analyzed"
                        },
                        "match_mapping_type": "string"
                    }
                }
            ],
            "_ttl": {
                "enabled": true,
                "default": "7d"
            },
            "properties": {
                "id": {
                    "type": "string",
                    "index": "not_analyzed"
                },
                "period": {
                    "type": "long"
                },
                "appid": {
                    "type": "string",
                    "index": "not_analyzed"
                },
                "keyword": {
                    "type": "string",
                    "index": "not_analyzed"
                },
                "condition": {
                    "type": "long"
                },
                "enable": {
                    "type": "boolean"
                },
                "createtime": {
                    "type": "multi_field",
                    "fields": {
                        "timestamp": {
                            "type": "date",
			    "format": "strict_date_optional_time||epoch_millis"
                        },
                        "sort": {
                            "type": "string",
                            "index": "not_analyzed"
                        }
                    }
                }
            },
            "_all": {
                "enabled": true
            }
        }
    },
    "aliases": {}
}
